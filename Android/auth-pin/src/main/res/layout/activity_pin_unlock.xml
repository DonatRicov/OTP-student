<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Back button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        app:tint="@color/otp_green_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Lock icon -->
    <ImageView
        android:id="@+id/ivLock"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_lock"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prijava unosom PIN-a"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ivLock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- PIN dots -->
    <LinearLayout
        android:id="@+id/pinContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View android:id="@+id/pin1" style="@style/PinBox"/>
        <View android:id="@+id/pin2" style="@style/PinBox"/>
        <View android:id="@+id/pin3" style="@style/PinBox"/>
        <View android:id="@+id/pin4" style="@style/PinBox"/>
        <View android:id="@+id/pin5" style="@style/PinBox"/>
        <View android:id="@+id/pin6" style="@style/PinBox"/>
    </LinearLayout>

    <!-- Forgot PIN -->
    <TextView
        android:id="@+id/tvForgotPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zaboravili ste pin?"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/pinContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Other login -->
    <TextView
        android:id="@+id/tvOtherLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drugi naÄini prijave"
        android:textStyle="bold"
        android:textColor="@color/otp_orange"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvForgotPin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Keypad -->
    <GridLayout
        android:id="@+id/keypadGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/tvOtherLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/key1"
            style="@style/KeypadButton"
            android:textSize="24sp"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/key2"
            style="@style/KeypadButton"
            android:textSize="24sp"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/key3"
            style="@style/KeypadButton"
            android:textSize="24sp"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/key4"
            style="@style/KeypadButton"
            android:textSize="24sp"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/key5"
            style="@style/KeypadButton"
            android:textSize="24sp"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/key6"
            style="@style/KeypadButton"
            android:textSize="24sp"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/key7"
            style="@style/KeypadButton"
            android:textSize="24sp"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/key8"
            style="@style/KeypadButton"
            android:textSize="24sp"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/key9"
            style="@style/KeypadButton"
            android:textSize="24sp"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/keyOk"
            style="@style/KeypadButton"
            android:textSize="24sp"
            android:textColor="@color/otp_green"
            android:text="OK"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/key0"
            style="@style/KeypadButton"
            android:textSize="24sp"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <ImageButton
            android:id="@+id/keyDel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_gravity="fill"
            android:background="@color/white"
            android:src="@drawable/ic_backspace"
            android:scaleType="fitCenter"
            android:padding="28dp"
            app:tint="@color/otp_green_dark" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
