<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".JobDetailsActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingBottom="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/back_button"
                    app:tint="@color/otp_green_dark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/btnFavorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_favorite_outline"
                    android:contentDescription="@null"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@color/otp_green_dark"
                    app:layout_constraintTop_toTopOf="@id/btnBack"
                    app:layout_constraintBottom_toBottomOf="@id/btnBack"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    style="@style/Podnaslov"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Detalji posla"
                    android:gravity="center"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="@id/btnBack"
                    app:layout_constraintBottom_toBottomOf="@id/btnBack"
                    app:layout_constraintStart_toEndOf="@id/btnBack"
                    app:layout_constraintEnd_toStartOf="@id/btnFavorite" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLogo"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_marginTop="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#33FFFFFF"
                    app:strokeWidth="1dp"
                    app:layout_constraintTop_toBottomOf="@id/btnBack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/ivCompanyLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="14dp"
                        android:src="@drawable/ic_otp_logo_circle"
                        android:contentDescription="@string/app_name" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_job_title_details"
                    style="@style/NaslovInterakcija"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/cardLogo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Viši / Specijalist za poslovnu analizu (domena digitalnog)" />

                <TextView
                    android:id="@+id/tvCompany"
                    style="@style/Tekst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/tv_job_title_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="OTP Banka" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toBottomOf="@id/header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardHourly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeWidth="1dp"
                    app:strokeColor="#B4B4B4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardLocation"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_money"
                            app:tint="@color/otp_green_dark" />

                        <TextView
                            style="@style/MaliTekst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Satnica"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/otp_grey" />

                        <TextView
                            android:id="@+id/tvHourlyRate"
                            style="@style/Tekst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:text="7.5 €/h" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeWidth="1dp"
                    app:strokeColor="#B4B4B4"
                    app:layout_constraintStart_toEndOf="@id/cardHourly"
                    app:layout_constraintEnd_toStartOf="@id/cardExpires"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/otp_green_dark" />

                        <TextView
                            style="@style/MaliTekst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Lokacija"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/otp_grey" />

                        <TextView
                            android:id="@+id/tvLocation"
                            style="@style/Tekst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:text="Zagreb/Split/Zadar" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardExpires"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeWidth="1dp"
                    app:strokeColor="#B4B4B4"
                    app:layout_constraintStart_toEndOf="@id/cardLocation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_history"
                            app:tint="@color/otp_green_dark" />

                        <TextView
                            style="@style/MaliTekst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Traje do"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/otp_grey" />

                        <TextView
                            android:id="@+id/tvExpires"
                            style="@style/Tekst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:text="25.12.2025." />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBody"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#B4B4B4"
                android:backgroundTint="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/cardsContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/Podnaslov"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opis posla" />

                    <TextView
                        android:id="@+id/tv_description_details"
                        style="@style/Tekst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@color/otp_grey"
                        android:text="Opis posla ide ovdje..." />

                    <TextView
                        style="@style/Podnaslov"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Područja"
                        android:gravity="center"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tv_job_requirements"
                        style="@style/Tekst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@color/otp_grey"
                        tools:text="• IT\n• Financije\n• Analitika" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Prijavi se"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/otp_green"
            app:cornerRadius="90dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
