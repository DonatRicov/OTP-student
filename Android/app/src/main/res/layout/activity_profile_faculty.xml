<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7F3">

    <!-- preskok gumb -->
    <TextView
        android:id="@+id/tvSkipFaculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preskoči >"
        android:textSize="14sp"
        android:textColor="@color/otp_green_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <!--naslov-->
    <TextView
        android:id="@+id/tvTitleFaculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dobrodošli u "
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/otp_green_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/tvTitleFacultyOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="otpStudent"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/otp_green"
        app:layout_constraintStart_toEndOf="@id/tvTitleFaculty"
        app:layout_constraintBaseline_toBaselineOf="@id/tvTitleFaculty" />

    <TextView
        android:id="@+id/tvSubtitleFaculty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kako bi započeli s traženjem poslova i praksi, molimo Vas da prvo postavite profil."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvTitleFaculty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <!---->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFaculty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/otp_green"
        app:strokeWidth="1dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitleFaculty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSectionFaculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Podaci o fakultetu"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/otp_green_dark"
                android:layout_marginBottom="12dp" />

            <!-- faks-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/OTPTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fakultet"
                app:placeholderText="Unesi naziv fakulteta..."
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFaculty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- smjer na faksu-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/OTPTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Smjer"
                app:placeholderText="Unesi smjer..."
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMajor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!---->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/OTPTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Razina obrazovanja"
                app:placeholderText="Npr. preddiplomski, diplomski..."
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--godina studija -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/OTPTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Godina studija"
                app:placeholderText="Unesi godinu studija..."
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--spremanje-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveFaculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Spremi unos"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/otp_green"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
