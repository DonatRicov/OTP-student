<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@color/otp_grey">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgCompanyLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_otp_logo_circle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Engineer"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvJobLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Zagreb / Split"
                android:textSize="13sp"
                android:textColor="@color/otp_grey" />

            <LinearLayout
                android:id="@+id/metaRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconPeople"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_people"
                    app:tint="@color/otp_grey"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/tvApplicants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="5 studenata"
                    android:textSize="12sp"
                    android:textColor="@color/otp_green_dark" />

            </LinearLayout>

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApplied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Prijavljeno"
            android:textAllCaps="false"
            android:visibility="gone"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_check"
            app:iconPadding="6dp"
            app:iconTint="@android:color/white"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/otp_green_dark"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"/>





    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
