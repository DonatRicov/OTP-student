<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardJob"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@color/otp_grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgCompanyLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_otp_logo_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- FAVORITE (gore desno) -->
        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/jobs_favourite"
            android:src="@drawable/ic_favorite_filled"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Specijalist za odrÅ¾ivi razvoj"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imgCompanyLogo"
            app:layout_constraintEnd_toStartOf="@id/ivFavorite"
            app:layout_constraintTop_toTopOf="@id/imgCompanyLogo" />

        <TextView
            android:id="@+id/tvJobLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:text="Zagreb / Zadar / Split"
            android:textColor="@color/otp_grey"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/imgCompanyLogo"
            app:layout_constraintEnd_toStartOf="@id/ivFavorite"
            app:layout_constraintTop_toBottomOf="@id/tvJobTitle" />

        <ImageView
            android:id="@+id/iconPeople"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_people"
            app:tint="@color/otp_grey"
            app:layout_constraintStart_toEndOf="@id/imgCompanyLogo"
            app:layout_constraintTop_toBottomOf="@id/tvJobLocation"
            app:layout_constraintBottom_toBottomOf="@id/btnApplied" />

        <TextView
            android:id="@+id/tvApplicants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="5 studenata"
            android:textColor="@color/otp_green_dark"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iconPeople"
            app:layout_constraintTop_toTopOf="@id/iconPeople"
            app:layout_constraintBottom_toBottomOf="@id/iconPeople" />

        <!-- STATUS (uvijek dolje desno kad je vidljiv) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApplied"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minHeight="32dp"
            android:text="@string/jobs_status_applied"
            android:textAllCaps="false"
            android:visibility="gone"

            android:paddingHorizontal="12dp"
            android:paddingVertical="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"

            android:layout_marginEnd="4dp"
            android:layout_marginBottom="6dp"

            app:cornerRadius="16dp"
            app:icon="@drawable/ic_check"
            app:iconPadding="6dp"
            app:iconTint="@android:color/white"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/otp_green_dark"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
