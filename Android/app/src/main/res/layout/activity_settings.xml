<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back"
                android:padding="8dp"
                app:tint="@color/otp_green_dark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postavke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/btnBack"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Račun -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Račun"
            android:textStyle="bold"
            android:textColor="@color/otp_green_dark"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Uredi profil -->
        <LinearLayout
            android:id="@+id/rowEditProfile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile_settings"
                app:tint="@color/otp_green" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Uredi profil"
                android:textSize="16sp"
                android:textColor="@color/otp_green" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/otp_green" />
        </LinearLayout>

        <!-- Promijeni lozinku -->
        <LinearLayout
            android:id="@+id/rowChangePassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                app:tint="@color/otp_green" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Promijeni lozinku"
                android:textSize="16sp"
                android:textColor="@color/otp_green" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/otp_green" />
        </LinearLayout>

        <!-- Obavijesti -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obavijesti"
            android:textStyle="bold"
            android:textColor="@color/otp_green_dark"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/rowNotifications"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications"
                app:tint="@color/otp_green" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Push obavijesti"
                android:textSize="16sp"
                android:textColor="@color/otp_green" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchPush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Sigurnost -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sigurnost"
            android:textStyle="bold"
            android:textColor="@color/otp_green_dark"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <!-- Biometrija -->
        <LinearLayout
            android:id="@+id/rowBiometric"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_fingerprint"
                app:tint="@color/otp_green" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Biometrijska prijava"
                android:textSize="16sp"
                android:textColor="@color/otp_green" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchBiometric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- PIN -->
        <LinearLayout
            android:id="@+id/rowPin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pin"
                app:tint="@color/otp_green" />

            <TextView
                android:id="@+id/tvPinTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Postavi PIN"
                android:textSize="16sp"
                android:textColor="@color/otp_green" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/otp_green" />
        </LinearLayout>


        <!-- Privatnost -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privatnost"
            android:textStyle="bold"
            android:textColor="@color/otp_green_dark"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <!-- Politika privatnosti -->
        <LinearLayout
            android:id="@+id/rowPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                app:tint="@color/otp_green" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Politika privatnosti"
                android:textSize="16sp"
                android:textColor="@color/otp_green" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/otp_green" />
        </LinearLayout>

        <!-- Obriši račun -->
        <LinearLayout
            android:id="@+id/rowDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                app:tint="@color/otp_green" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Obriši račun"
                android:textSize="16sp"
                android:textColor="@color/otp_green" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/otp_green" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
