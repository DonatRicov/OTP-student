<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back" />
        <!-- STAVITI OTP STRELICU ZA NAZAD -->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Moj Životopis"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Upload Area: TREBA UREDIUTI PO SKICI-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_upload"
            android:layout_marginBottom="10dp"/>
        <!-- UPLOAD SLIKA DODATI -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odaberi datoteku za prijenos"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podržani format: PDF"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnUploadPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odaberi datoteku"
            android:backgroundTint="#006400"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nedavno"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#666666"/>

    <!-- List of CVs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCvs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
