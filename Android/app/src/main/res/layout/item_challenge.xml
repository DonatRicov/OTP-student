<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/otp_green"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:contentDescription="@null"
            app:tint="@color/otp_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Postavi podatke raÄuna"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/otp_green"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            app:layout_constraintTop_toTopOf="@id/ivIcon"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Ispunio si sve podatke..."
            android:textSize="13sp"
            android:textColor="#5B5B5B"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Aktivno"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/otp_green"
            app:layout_constraintTop_toBottomOf="@id/tvDesc"
            app:layout_constraintStart_toStartOf="@id/tvDesc"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClaim"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:text="PREUZMI BODOVE"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="13sp"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/otp_green"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 20"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@id/btnClaim"
            app:layout_constraintTop_toTopOf="@id/btnClaim"
            app:layout_constraintBottom_toBottomOf="@id/btnClaim"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
