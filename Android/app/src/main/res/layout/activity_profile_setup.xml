<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <!-- HEADER -->

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:tint="@color/otp_green_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/back_button" />

        <ImageView
            android:id="@+id/imgHeaderLogo"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/otp_student_logo"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <!-- AVATAR S RINGOM -->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatarCard"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="3dp"
            app:strokeColor="@color/otp_green_dark"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_profile_placeholder" />
        </com.google.android.material.card.MaterialCardView>


        <!-- PODACI O PROFILU -->

        <LinearLayout
            android:id="@+id/profileHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/avatarCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Podaci o profilu"
                android:textColor="@color/otp_green_dark"
                android:textStyle="bold"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/otp_green_dark" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProfileData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false"
            app:cardBackgroundColor="@android:color/white"
            app:strokeColor="@color/otp_green"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@id/profileHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/upload_area">

                <!-- Email -->
                <LinearLayout
                    android:id="@+id/rowEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:minHeight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvEmailValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lana@student.foi.hr" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#33000000" />

                <!-- Lozinka -->
                <LinearLayout
                    android:id="@+id/rowPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:minHeight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lozinka"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPasswordValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="************" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#33000000" />

                <!-- Telefon -->
                <LinearLayout
                    android:id="@+id/rowPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:minHeight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Telefon"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPhoneValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dodajte broj telefona"
                        android:textColor="#9E9E9E" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- PODACI O STUDENTU -->

        <LinearLayout
            android:id="@+id/studentHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardProfileData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Podaci o studentu"
                android:textColor="@color/otp_green_dark"
                android:textStyle="bold"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/otp_green_dark" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStudentData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false"
            app:cardBackgroundColor="@android:color/white"
            app:strokeColor="@color/otp_green"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@id/studentHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/upload_area">

                <!-- Ime i prezime -->
                <LinearLayout
                    android:id="@+id/rowName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:minHeight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ime i prezime"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNameValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lana Maček" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#33000000" />

                <!-- Spol -->
                <LinearLayout
                    android:id="@+id/rowGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:minHeight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Spol"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvGenderValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ž" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#33000000" />

                <!-- Lokacija -->
                <LinearLayout
                    android:id="@+id/rowLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:minHeight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lokacija"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvLocationValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Varaždin" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#33000000" />

                <!-- Datum rođenja -->
                <LinearLayout
                    android:id="@+id/rowBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:minHeight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Datum rođenja"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBirthdayValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dodajte datum rođenja"
                        android:textColor="#9E9E9E" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- PODACI O FAKULTETU -->

        <LinearLayout
            android:id="@+id/facultyHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardStudentData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Podaci o fakultetu"
                android:textColor="@color/otp_green_dark"
                android:textStyle="bold"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/otp_green_dark" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFacultyData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false"
            app:cardBackgroundColor="@android:color/white"
            app:strokeColor="@color/otp_green"
            app:strokeWidth="2dp"
            app:layout_constraintTop_toBottomOf="@id/facultyHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/upload_area">

                <!-- Fakultet -->
                <LinearLayout
                    android:id="@+id/rowFaculty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:minHeight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fakultet"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFacultyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fakultet organizacije i informatike" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#33000000" />

                <!-- Smjer -->
                <LinearLayout
                    android:id="@+id/rowMajor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:minHeight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Smjer"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMajorValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informacijsko i programsko inženjerstvo" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#33000000" />

                <!-- Razina obrazovanja -->
                <LinearLayout
                    android:id="@+id/rowEducationLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:minHeight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Razina obrazovanja"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvEducationLevelValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dodajte razinu obrazovanja"
                        android:textColor="#9E9E9E" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
