<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp">

        <!-- naslov i logo. nez jel logo dobar tho -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">


        <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dobrodošli natrag!"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/otp_green_dark"/>

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/logo"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <!-- Email input. trebamo jos vidit ocemo li persirati korisniku ili ne-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/OTPTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:placeholderText="Unesi studentsku email adresu..."
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- lozinka. provjeriti rubne slucajeve jer nez rade li one provjere -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutPassword"
            style="@style/OTPTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Lozinka"
            app:placeholderText="Unesi lozinku..."
            app:boxBackgroundMode="outline"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_visibility_off"
            app:endIconTint="@color/otp_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- glavni gumb -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Prijavi se"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/otp_green"
            android:textColor="@android:color/white"/>

        <!-- Divider  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#33000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Ili se prijavi na drugi način"
            android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#33000000"/>
        </LinearLayout>

        <!-- TO DO: DODATI IKONU -->

        <!-- pin koji cemo implementirati kasnije. dodati ikonu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPin"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Prijava PIN-om"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/otp_green"

            app:icon="@drawable/ic_pin"

            app:iconTint="@color/otp_green"
        app:iconPadding="8dp"
            app:iconGravity="textEnd"
            />

        <!-- Otisak koji cemo implementirati kasnije -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBiometric"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Prijava otiskom prsta"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/otp_green"
            app:cornerRadius="28dp"
            android:textColor="@color/otp_green"
            app:icon="@drawable/ic_fingerprint"

            app:iconTint="@color/otp_green"
        app:iconPadding="8dp"
            app:iconGravity="textEnd"
            />

        <!-- Link na registraciju -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="18dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Još nemaš račun? "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvGoRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postani OTPStudent!"
                android:textStyle="bold"
                android:textColor="@color/otp_orange"
                android:textSize="14sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>