<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OTPTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/otp_green</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/otp_green_dark</item>
        <item name="endIconTint">@color/otp_green</item>
    </style>

    <style name="Naslov">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="Podnaslov">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="Tekst">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="MaliTekst">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="NaslovInterakcija">
        <item name="android:textColor">@color/otp_green_dark</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="PodnaslovInterakcija">
        <item name="android:textColor">@color/otp_green_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="TekstInterakcija">
        <item name="android:textColor">@color/otp_green_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="MaliTekstInterakcija">
        <item name="android:textColor">@color/otp_green_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>


    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="RoundedDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceMediumComponent">@style/DialogRoundedCorners</item>
    </style>

    <style name="DialogRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="SettingsCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/divider_light</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="SettingsSectionTitle" parent="TekstInterakcija">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/otp_green_dark</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="SettingsRowTitle" parent="TekstInterakcija">
        <item name="android:textColor">@color/otp_green_dark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SettingsRowIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="SettingsChevronIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="NaslovStranice">
        <item name ="android:textColor">@color/black</item>
        <item name ="android:textSize">20sp</item>
        <item name ="android:textStyle">bold</item>
    </style>

    <style name="PlaceholderLabel"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>

        <item name="boxStrokeColor">@color/otp_green</item>
        <item name="boxStrokeWidth">1dp</item>

        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/otp_green_dark</item>
    </style>

    <style name="Widget.OTPStudent.Chat.Title" parent="NaslovInterakcija">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/otp_green</item>
    </style>

    <style name="Widget.OTPStudent.Chat.History" parent="MaliTekst">
        <item name="android:textColor">@color/otp_grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="Widget.OTPStudent.Chat.Bubble.User" parent="Tekst">
        <item name="android:background">@drawable/bg_bubble_user</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.OTPStudent.Chat.Bubble.Bot" parent="Tekst">
        <item name="android:background">@drawable/bg_bubble_bot</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.OTPStudent.Chat.Suggestion" parent="MaliTekst">
        <item name="android:background">@drawable/bg_suggestion_chip</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/otp_grey</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Widget.OTPStudent.Chat.InputBar">
        <item name="android:background">@color/otp_green_light</item>
    </style>

    <style name="Widget.OTPStudent.Chat.Input">
        <item name="android:background">@drawable/bg_chat_input</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.OTPStudent.Chat.IconButton.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/chat_icon_btn_size</item>
        <item name="strokeWidth">@dimen/chat_stroke_width</item>
    </style>

    <style name="Widget.OTPStudent.Chat.IconButton.Add" parent="Widget.OTPStudent.Chat.IconButton.Base">
        <item name="android:textColor">@color/otp_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@color/otp_green_light</item>
        <item name="strokeColor">@color/otp_green</item>
    </style>

    <style name="Widget.OTPStudent.Chat.IconButton.Send" parent="Widget.OTPStudent.Chat.IconButton.Base">
        <item name="android:textColor">@color/otp_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/divider_light</item>
    </style>

    <style name="Widget.OTPStudent.Chat" />
    <style name="Widget.OTPStudent" />
    <style name="Widget" />



</resources>

